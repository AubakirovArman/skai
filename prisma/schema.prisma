generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

// Базовая модель пользователя для NextAuth
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Для credentials auth
  role          String    @default("user") // user или admin
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model DialogMeeting {
  id         String           @id @default(cuid())
  code       String           @unique
  titleRu    String
  titleKk    String
  titleEn    String
  summaryRu  String?
  summaryKk  String?
  summaryEn  String?
  overviewRu String?
  overviewKk String?
  overviewEn String?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  questions  DialogQuestion[]

  @@map("dialog_meetings")
}

model DialogQuestion {
  id                String         @id @default(cuid())
  meetingId         String         @map("meeting_id")
  number            Int
  titleRu           String
  titleKk           String
  titleEn           String
  collapsedTextRu   String
  collapsedTextKk   String
  collapsedTextEn   String
  expandedTextRu    String?
  expandedTextKk    String?
  expandedTextEn    String?
  decisionLabelRu   String?
  decisionLabelKk   String?
  decisionLabelEn   String?
  triggerPhrases    String[]       @default([])
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  meeting           DialogMeeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@unique([meetingId, number])
  @@map("dialog_questions")
}

model DialogFAQ {
  id               String   @id @default(cuid())
  questionRu       String   @map("question_ru")
  questionKk       String?  @map("question_kk")
  questionEn       String?  @map("question_en")
  answerRu         String   @map("answer_ru") @db.Text
  answerKk         String?  @map("answer_kk") @db.Text
  answerEn         String?  @map("answer_en") @db.Text
  videoUrl         String?  @map("video_url")
  similarQuestions String[] @default([]) @map("similar_questions")
  isActive         Boolean  @default(true) @map("is_active")
  priority         Int      @default(0)
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@map("dialog_faq")
}

model DialogSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("dialog_settings")
}
